<table class="table table-responsive-lg table-dark table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Address</th>
            <th>2nd Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Contact</th>
            <th>Phone</th>
            <th>Fax</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        {{#each carriers}}
        <tr class="{{carrier_name}}-row">
            <td>
                {{carrier_name}}
                <button type="submit" class="edit-button btn btn-success" data-id="{{carrier_name}}">
                    Edit
                </button>
            </td>
            <td>{{carrier_address}}</td>
            <td>{{address_2}}</td>
            <td>{{city}}</td>
            <td>{{state_code}}</td>
            <td>{{zip}}</td>
            <td>{{contact}}</td>
            <td>{{phone}}</td>
            <td>{{fax}}</td>
            <td class="email-cell">{{email}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>