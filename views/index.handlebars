<!-- change to sushi info! -->

<h1>Sushi Rolls!</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Sushi rolls ready to devour!</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">🍣🍱🍣🦪🍣🍤🍣🍱🍣🦪🍣🍤🍣</h5>
                    <div class="card-text">
                        <ul>
                            {{#each rolls}}
                            {{#unless devoured}}
                            {{> rolls/roll-block devoured=true}}
                            {{/unless}}
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>These Devoured Rolls Were <em>Soy</em> Yummy!</h2>
                </div>
                <div class="card-body">
                    <h5 class="card-title">🍣🍱🍣🦪🍣🍤🍣🍱🍣🦪🍣🍤🍣</h5>
                    <div class="card-text">

                        <ul>
                            {{#each rolls}}
                            {{#if devoured}}
                            {{> rolls/roll-block devoured=false}}
                            {{/if}}
                            {{/each}}
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
{{> form-block }}